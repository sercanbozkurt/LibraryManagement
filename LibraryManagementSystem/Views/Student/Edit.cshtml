@model Student

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card shadow">
                <div class="card-header">
                    <h2>Öğrenci Düzenle</h2>
                </div>
                <div class="card-body">

                    <form asp-action="Edit" asp-controller="Student" method="post">
                        <input type="hidden" asp-for="StudentID">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Öğrenci Adı</label>
                                    <input asp-for="StudentName" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Öğrenci Soyadı</label>
                                    <input asp-for="StudentSurname" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Telefon</label>
                                    <input asp-for="Phone" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Kayıt Tarihi</label>
                                    <input asp-for="Registration" class="form-control" type="datetime-local">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="mb-3">
                                <label class="form-label">Durum(Aktif/Pasif)</label>
                                <div class="form-check form-switch ps-5">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </div>
                        </div>



                        <button class="btn btn-primary" type="submit">Güncelle</button>
                        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Geri Dön</a>

                    </form>



                </div>

            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card shadow">
                <div class="card-header">
                    Okuduğu Kitaplar
                </div>
                <div class="card-body">

                    <ul>
                        @foreach (var item in @Model.Reservations)
                        {
                            <li>@item.Book.BookInfo</li>
                        }
                    </ul>



                </div>

            </div>
        </div>
    </div>



</div>